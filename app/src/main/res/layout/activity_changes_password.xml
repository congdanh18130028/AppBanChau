<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangesPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/txt_nhap_mk_cu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Mật khẩu cũ"
            android:inputType="textPersonName"
            android:paddingLeft="8dp" />

        <EditText
            android:id="@+id/txt_nhap_mk_moi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:paddingLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Mật Khẩu mới"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_nhap_lai_mk_moi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:paddingLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Nhập lại mật khảu mới"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_changes_password"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:background="@color/green_500"
            android:text="Đổi mật khẩu" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/green_500"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back_change_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/green_500"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_baseline_arrow_white_30" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Đổi mật khẩu"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>