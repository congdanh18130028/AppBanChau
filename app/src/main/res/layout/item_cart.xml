<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/cart_item_id"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/cart_item_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="center" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:id="@+id/cart_item_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Xuong rong"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cart_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200d"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <ImageView
                    android:id="@+id/btn_decrease_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:padding="7dp"
                    app:srcCompat="@drawable/ic_sharp_remove_24" />

                <TextView
                    android:id="@+id/cart_item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:paddingLeft="32dp"
                    android:paddingTop="3dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="4dp"
                    android:text="9" />

                <ImageView
                    android:id="@+id/btn_increase_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:padding="7dp"
                    app:srcCompat="@drawable/ic_baseline_add_24" />

            </LinearLayout>


        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_delete_cart_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@color/white"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_delete_24" />


    </LinearLayout>


</androidx.cardview.widget.CardView>